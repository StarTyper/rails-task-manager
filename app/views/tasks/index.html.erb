<h1>Tasks</h1>

<div>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <% completed = "checked" %>
    <% else %>
      <% completed = "" %>
    <% end %>
    <div>
      <input type="checkbox" id="<%= task.title %>" name="<%= task.title %>" <%= completed %> />
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </div>
  <% end %>
</div>
<p></p>
<div>
  <%= link_to "Add a new Task", new_task_path %>
</div>
